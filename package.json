{
  "name": "twreporter-congress-dashboard",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/cms",
      "packages/frontend",
      "packages/shared",
      "packages/cli"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "build:shared": "yarn workspace @twreporter/congress-dashboard-shared build",
    "postinstall": "yarn build:shared",
    "publish:shared": "yarn workspace @twreporter/congress-dashboard-shared publish",
    "version:bump": "lerna version --conventional-commits --yes",
    "postversion": "yarn install --immutable"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "changelog-maker": "^4.3.3",
    "eslint": "^7.7.0",
    "eslint-config-next": "13.4.9",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lerna": "^9.0.3",
    "lint-staged": "^12.4.2",
    "prettier": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.6.0"
}
